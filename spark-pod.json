{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "spark-personal",
        "namespace": "xxx",
        "labels": {
            "k8s-app": "spark-personal",
            "instance": "xxx",
            "owner": "xxx",
            // "repo": "xxx"
        }
    },
    "spec": {
        "containers": [
            {
                "name": "spark-personal",
                "image": "slateci/spark:latest",
                "args": [
                    "spark-submit",
                    "/ML_platform_tests/SetupPrivateJupyterLab.sh",
                    "--conf spark.kubernetes.namespace=ml-usatlas-org",
                    "--conf spark.kubernetes.authenticate.driver.serviceAccountName=spark-acc",
                    "--conf spark.kubernetes.container.image=slateci/spark:latest",
                    "--conf spark.executor.instances=5",
                    "--master k8s://https://192.170.227.132:6443",
                    "--deploy-mode cluster",
                    "--name spark-pi",
                    "https://raw.githubusercontent.com/slateci/spark/master/examples/src/main/python/pi.py"
                ],
                // "ports": [
                //     {
                //         "containerPort": 9999
                //     }
                // ],
                // "resources": {
                //     "requests": {
                //         "cpu": 1,
                //         "memory": "12Gi"
                //     }
                // },
                "volumeMounts": [
                    {
                        "name": "local-scratch",
                        "mountPath": "/data",
                        "readOnly": false
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "local-scratch",
                "hostPath": {
                    "path": "/data"
                }
            }
        ],
        // "nodeSelector": {
        //     "mlnode": "true"
        // },
        "restartPolicy": "Always",
        "serviceAccountName": "xxx"
    }
}